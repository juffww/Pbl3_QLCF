@{
    ViewData["Title"] = "Khôi phục mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khôi phục mật khẩu | Hệ thống quản lý quán cà phê</title>
    <style>
        :root {
            --primary-color: #8B4513; /* Nâu cà phê đậm */
            --primary-light: #C4A484; /* Màu cà phê sữa */
            --primary-gradient: linear-gradient(45deg, #8B4513, #D2B48C); /* Gradient từ nâu đậm đến caramel */
            --text-color: #5D4037; /* Nâu sẫm cho text */
            --light-text: #7D6E6A; /* Nâu nhạt hơn cho text phụ */
            --background: #FFF8EA; /* Màu kem nhạt */
            --white: #fff;
            --shadow: 0 4px 12px rgba(139, 69, 19, 0.15);
            --border-radius: 8px;
            --success-color: #A06235; /* Màu nâu caramel cho completed */
            --error-color: #D32F2F; /* Màu đỏ cho lỗi */
            --success-message: #2E7D32; /* Màu xanh lá cho thông báo thành công */
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--background);
            display: flex;
            min-height: 100vh;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .card {
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            width: 100%;
            max-width: 500px;
            overflow: hidden;
        }

        .card-body {
            padding: 40px;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo {
            width: 80px;
            margin-bottom: 15px;
        }

        .app-name {
            font-size: 28px;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        h2 {
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 24px;
            font-size: 28px;
        }

        /* Progress Bar Style */
        .progress-container {
            position: relative;
            margin-bottom: 40px;
            display: flex;
            justify-content: center;
        }

        .progress {
            height: 4px;
            width: 200px;
            background-color: #E6DAC3;
            position: relative;
        }

        .progress-bar {
            height: 100%;
            background: var(--primary-gradient);
            width: 0%;
            transition: width 0.3s ease;
        }

        .step-circle {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #E6DAC3;
            color: var(--light-text);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            position: absolute;
            top: -14px;
            transition: all 0.3s;
        }

        .-circle:nth-child(1) {
            left: 0;
            transform: translateX(-50%);
        }

        .step-circle:nth-child(2) {
            left: 50%;
            transform: translateX(-50%);
        }

        .step-circle:nth-child(3) {
            right: 0;
            transform: translateX(50%);
        }

        .step-circle.active {
            background-color: var(--primary-color);
            color: white;
        }

        .step-circle.completed {
            background-color: var(--success-color);
            color: white;
        }

        /* Form Styles */
        /* .form-content > div {
            display: none;
        }

        .form-content > div.active {
            display: block;
        }
 */
        .form-label {
            display: block;
            margin-bottom: 8px;
            color: var(--text-color);
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #E6DAC3;
            border-radius: var(--border-radius);
            font-size: 16px;
            transition: all 0.3s;
            margin-bottom: 16px;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-light);
            box-shadow: 0 0 0 2px rgba(139, 69, 19, 0.1);
        }

        .form-text {
            font-size: 14px;
            color: var(--light-text);
            margin-top: -12px;
            margin-bottom: 16px;
        }

        .btn {
            width: 100%;
            padding: 12px;
            background: var(--primary-gradient);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 16px;
        }

        .btn:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
        }

        .btn-outline:hover {
            background-color: rgba(139, 69, 19, 0.1);
        }

        .text-center {
            text-align: center;
        }

        .text-decoration-none {
            text-decoration: none;
            color: var(--primary-color);
            display: inline-block;
            margin-top: 5px;
            font-size: 14px;
        }

        .text-decoration-none:hover {
            color: var(--primary-light);
            text-decoration: underline;
        }

        .alert {
            padding: 12px 16px;
            border-radius: var(--border-radius);
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-danger {
            background-color: rgba(211, 47, 47, 0.1);
            color: var(--error-color);
            border: 1px solid rgba(211, 47, 47, 0.2);
        }

        .alert-success {
            background-color: rgba(46, 125, 50, 0.1);
            color: var(--success-message);
            border: 1px solid rgba(46, 125, 50, 0.2);
        }

        .is-valid {
            border-color: var(--success-color);
        }

        .is-invalid {
            border-color: var(--error-color);
        }
    </style>
</head>
<body>
