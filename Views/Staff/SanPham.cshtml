                <div class="option-group">
                    <label class="option-label">Số điện thoại</label>
                    <input type="text" placeholder="Nhập số điện thoại" class="option-input">
                </div>
                <div class="option-group">
                    <label class="option-label">Ghi chú đơn hàng</label>
                    <textarea class="option-input" placeholder="Thêm ghi chú cho đơn hàng" style="height: 80px;"></textarea>
                </div>
            </div>

            <button class="checkout-btn">Hoàn tất đơn hàng</button>
            <button class="clear-cart-btn">Xóa đơn hàng</button>
        </div>
    </div>
</body>
